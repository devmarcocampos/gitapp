<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="20dp"
    android:backgroundTint="@color/default_FF6959"
    android:id="@+id/cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainContainer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ownerConstraintLayout"
            android:layout_width="@dimen/default_125dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ownerImageView"
                android:layout_width="@dimen/default_50dp"
                android:layout_height="@dimen/default_50dp"
                android:layout_marginTop="@dimen/default_8dp"
                app:shapeAppearanceOverlay="@style/ImageView.Round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/ownerNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="nome do autor"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/default_4dp"
                android:layout_marginBottom="@dimen/default_8dp"
                app:layout_constraintTop_toBottomOf="@+id/ownerImageView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iconGit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_github"
            android:layout_marginTop="@dimen/default_4dp"
            app:layout_constraintStart_toEndOf="@+id/ownerConstraintLayout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameRepositoryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="nome do repositorio"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/default_4dp"
            app:layout_constraintStart_toEndOf="@+id/iconGit"
            app:layout_constraintTop_toTopOf="@+id/iconGit"
            app:layout_constraintBottom_toBottomOf="@+id/iconGit"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iconStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            android:layout_marginTop="@dimen/default_2dp"
            app:layout_constraintStart_toEndOf="@+id/ownerConstraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/iconGit" />

        <TextView
            android:id="@+id/starsCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="132456"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/default_4dp"
            app:layout_constraintTop_toTopOf="@+id/iconStar"
            app:layout_constraintBottom_toBottomOf="@+id/iconStar"
            app:layout_constraintStart_toEndOf="@+id/iconStar" />

        <ImageView
            android:id="@+id/iconFork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_source_branch"
            android:layout_marginTop="@dimen/default_2dp"
            app:layout_constraintStart_toEndOf="@+id/ownerConstraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/iconStar" />

        <TextView
            android:id="@+id/forkCountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1315646"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/default_4dp"
            app:layout_constraintTop_toTopOf="@+id/iconFork"
            app:layout_constraintBottom_toBottomOf="@+id/iconFork"
            app:layout_constraintStart_toEndOf="@+id/iconFork" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>